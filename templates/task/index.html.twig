{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

  

{% block body %}
    <h1>Task index</h1>
    <script type="application/javascript" >
        function go() {
            tmp = "/task/rech/" + document.getElementById("monChamp").value + "";
            if (tmp == "/task/rech/" ) {
                alert("Il n'y a pas de ref mantis" );
            }
            else 
                location.href=tmp;
        }
    
    </script>
        Ref Mantis<input type="Text" id="monChamp" ><input type="button" value="Go" 
        onClick="go();" >
        
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>CreatedAt</th>
                <th>Date</th>
                <th>Content</th>
                <th>RefMantis</th>
                <th>Duration</th>
                <th>Type Inter</th>
                <th>Client</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.subject }}</td>
                <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ task.date ? task.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ task.content }}</td>
                <td>{{ task.refMantis }}</td>
                <td>{{ task.duration }}</td>
                <td>{{ task.typeInter.name }}</td>
                <td>{{ task.client.name }}</td>
                <td>
                    <a href="{{ path('task_show', {'id': task.id}) }}">show</a>
                    <a href="{{ path('task_edit', {'id': task.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('task_new') }}">Create new</a>
{% endblock %}
